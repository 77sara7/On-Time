<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/customerN"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="TextView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/customerT"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/customerN"
        android:layout_toEndOf="@+id/customerN" />

    <TextView
        android:text="TextView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/customerNumber"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:text="TextView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/customerP"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/customerT"
        android:layout_toEndOf="@+id/customerT"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:textAppearance="@style/TextAppearance.AppCompat" />
</RelativeLayout>