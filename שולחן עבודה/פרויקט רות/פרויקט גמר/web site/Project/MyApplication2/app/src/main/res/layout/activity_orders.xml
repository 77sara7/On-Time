<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_new_order"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:weightSum="1"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a301265963.myapplication.new_order.NewOrderActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2">
    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="ccccc"
        android:layout_marginLeft="0dp"
        android:id="@+id/wait"
        android:onClick="changeWait"
        android:background="#797373"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/attend"
        android:layout_marginLeft="5dp"
        android:layout_above="@+id/container"
        android:layout_alignEnd="@+id/container"
    android:text="@string/AllOrders"
        android:onClick="changeAll"
        android:background="#f41919"
        android:layout_alignRight="@+id/container" />

    <Button
        android:layout_width="90dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/all"
        android:text="@string/atend"
        android:onClick="changeAttend"
        android:background="#b7dee9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="54dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/anim"
            android:id="@+id/imageView3" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container">
        </FrameLayout>

    </LinearLayout>



</LinearLayout>



